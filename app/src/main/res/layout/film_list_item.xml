<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="film"
            type="com.fufufu.moviecataloguemvvm.models.Film"/>
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/film_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:radius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="16dp">
            <ImageView
                android:id="@+id/iv_poster"
                bind:filmPoster="@{film.posterPath}"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:contentDescription="@string/poster_film_description" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_film_title"
                    android:text="@{film.title}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:text="Judul Film" />
                <TextView
                    android:id="@+id/tv_film_overview_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:text="@string/overview_tag"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_film_overview_value"
                    android:text="@{film.overview}"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:minLines="3"
                    android:maxLines="4"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingTop="3dp"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>